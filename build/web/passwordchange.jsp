                    window.onload = function() {
                        var messageElement = document.getElementById("update");
                        var message = "password updated";

                        if (message && message.length > 0) {
                            messageElement.textContent = message;
                            messageElement.style.display = "block";
                        }
                    };
                </script>
                <%
                // response.sendRedirect("passwordchange.jsp?message=Password successfully updated");
            } else if (password != null && !password.equals(passwordFromDatabase)) {
                %>
                <div id="popupMessage" class="popup-message">
                    Password update failed. Incorrect current password
                </div>
                <script>
                    window.onload = function() {
                        var messageElement = document.getElementById("Not-update");
                        var message = "Password update failed. Incorrect current password";

                        if (message && message.length > 0) {
                            messageElement.textContent = message;
                            messageElement.style.display = "block";
                        }
                    };
                </script>
                <%
                // response.sendRedirect("passwordchange.jsp?message=Password update failed. Incorrect current password");
            }
        } else {
            %>
            <div id="popupMessage" class="popup-message">
                User not found
            </div>
            <%
            // response.sendRedirect("passwordchange.jsp?message=User not found");
        }
    } catch (Exception e) {
        e.printStackTrace();
        // If error occurred while updating the password
        %>
        <div id="popupMessage" class="popup-message">
            Error Updating Password!
        </div>
        <%
    } finally {
        if (rs != null) {
            try {
                rs.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
        if (stmt != null) {
            try {
                stmt.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
        if (conn != null) {
            try {
                conn.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
    }
%>







