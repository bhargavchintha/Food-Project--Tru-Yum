    // Set up the database connection
    Connection conn = null;
    PreparedStatement stmt = null;
    ResultSet rs = null;

    try {
        conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/signup", "root", "root");
        stmt = conn.prepareStatement("SELECT password FROM signu WHERE email = ?");
        stmt.setString(1, email);
        rs = stmt.executeQuery();

        if (rs.next()) {
            String passwordFromDatabase = rs.getString("password");

            if (password != null && password.equals(passwordFromDatabase)) {
                stmt = conn.prepareStatement("UPDATE signu SET password = ? WHERE email = ?");
                stmt.setString(1, newpassword);
                stmt.setString(2, email);
                stmt.executeUpdate();
                %>
